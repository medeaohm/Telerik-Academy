extends common/layout

block mainContent
    div
        h1(class='jumbotron text-center') Check below our WEARABLES:
        each wearable in wearables
            div(class='text-center')
                div(class='row')
                    div(class='col-sm-offset-3 col-md-6')
                        div(class="panel panel-primary text-center")
                            div(class="panel-heading")
                                h3(class="panel-title") 
                                    = wearable.brand + ' ' + wearable.model + '  - Price: ' + wearable.price + '$'
                            div(class="panel-body")
                                img(src=wearable.image style='width:80%')