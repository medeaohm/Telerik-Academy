doctype html
html(lang="en")
  head
    title I love cats
    link(rel='stylesheet', href='styles/styles.css')
  body
    .root
      #gallery
        .gallery-list
          each img in ['cat-01',"cat-02","cat-03"]
              img(src='img/'+img+'.jpg' width='300px' height='240px')

      div
        .current-image
            div
                img(id="current" src="img/cat-01.jpg" width='350px' height='280px')
            button(type="button" onclick="displayPreviousImage()") Previous
            button(type="button" onclick="displayNextImage()") Next

    script(src='scripts/scripts.js')