@using LostPets.Web.ViewModels.Posts
@{
    ViewBag.Title = "All";
}
@model int?
@using (Html.BeginForm("All", "Posts", FormMethod.Get))
{
    @(Html.Kendo()
        .DropDownList()
        .Name("category")
        .HtmlAttributes(new { style = "width: 100%" })
        .DataTextField("Text")
        .DataValueField("Value")
        .OptionLabel("Choose category")
        .DataSource(dataSource => {
            dataSource.Read(read => read.Action("GetCategories", "Posts"));
        }))

    <input type="submit" class="btn btn-default" />
}

<br />
<br />

<div class="container">
    <div class="row k-header">
        <div class="col-md-3 text-center">
            <h3>Title</h3>
        </div>
        <div class="col-md-4 text-center">
            <h3>Content</h3>
        </div>
    </div>
</div>
<br />

@(Html.Kendo()
    .ListView<PostViewModel>()
    .TagName("div")
    .Name("all-posts")
    .Pageable()
    .ClientTemplateId("all-posts-template")
    .DataSource(dataSource => {
        dataSource
            .ServerOperation(true)
            .PageSize(5)
            .Read(read => read.Action("ReadPosts", "Posts"));
    }))

<script id="all-posts-template" type="text/x-kendo-tmpl">
    <div class="row">
        <div class="col-md-3 text-center">
            <a href="/Posts/Details/#= Id #">#= Title #</a>
        </div>
        <div class="col-md-2 text-center">
            #= Content #
        </div>
    </div>
    <br />
</script>
