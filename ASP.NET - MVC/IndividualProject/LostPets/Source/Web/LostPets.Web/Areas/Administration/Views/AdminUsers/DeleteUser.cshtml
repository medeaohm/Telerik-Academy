@using LostPets.Web.Areas.Administration.ViewModels.AdminUsers

@model AdminUserViewModel
@{
    ViewBag.Title = "Delete User";
}

<h2>Are you sure you want to delete this user? </h2>

@using (Html.BeginForm("DeleteConfirmed", "AdminUsers", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <div class="text-center">
            <input type="submit" value="Delete User" class="btn btn-danger" />
        </div>
        @Html.ActionLink("Back to List", "All")
    </div>
}

