@using LostPets.Web.Areas.Administration.ViewModels.AdminComments

@model AdminCommentViewModel
@{
    ViewBag.Title = "Delete Comment";
}

<h2> Are you sure you want to delete this comment? </h2>

@using (Html.BeginForm("DeleteConfirmed", "AdminComments", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <div class="text-center">
            <input type="submit" value="Delete Comment" class="btn btn-danger" />
        </div>
        @Html.ActionLink("Back to List", "All")
    </div>
}

