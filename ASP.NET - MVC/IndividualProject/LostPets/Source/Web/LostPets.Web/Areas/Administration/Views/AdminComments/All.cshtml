@model LostPets.Web.Areas.Administration.ViewModels.AdminComments.AdminPageableListCommentViewModel
@{
    ViewBag.Title = "All Comments";
}
<div class="container">
    <h1 class="text-center">All Comments</h1>
    @*@using (Html.BeginForm("All", "AdminComments", FormMethod.Get, new { @class = "form", enctype = "multipart/form-data" }))
    {
    }*@
    <br />
    <div class="row">
        <div class="col-md-1 text-center">
            Id
        </div>
        <div class="col-md-3 text-center">
           Content
        </div>
        <div class="col-md-2 text-center">
           Author UserName
        </div>
        <div class="col-md-1 text-center">
            Post Id
        </div>
        <div class="col-md-2 text-center">
            Post Title
        </div> 
    </div>
    <br />
    <div class="row">
        @foreach (var comment in Model.Comments)
        {
            @Html.Partial("_AllPartial", comment)
        }
    </div>  
    <div class="row text-center">
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li>
                        <a href="/Administration/AdminComments/All/@(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i < Model.TotalPages; i++)
                {
                    var className = string.Empty;
                    if (Model.CurrentPage == i)
                    {
                        className = "active";
                    }
                    <li class="@className"><a href="/Administration/AdminComments/All/@i">@i</a></li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li>
                        <a href="/Administration/AdminComments/All/@(Model.CurrentPage+1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
