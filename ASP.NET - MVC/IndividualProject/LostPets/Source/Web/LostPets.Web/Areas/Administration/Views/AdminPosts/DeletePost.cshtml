@using LostPets.Web.Areas.Administration.ViewModels.AdminPosts

@model AdminPostViewModel
@{
    ViewBag.Title = "Delete Post";
}

<h2>Are you sure you want to delete this post and all its comments? </h2>

@using (Html.BeginForm("DeleteConfirmed", "AdminPosts", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <div class="text-center">
            <input type="submit" value="Delete Post" class="btn btn-danger" />
        </div>
        @Html.ActionLink("Back to List", "All")
    </div>
}

