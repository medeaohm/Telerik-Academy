@{
    ViewBag.Title = "Home Page";
}

<h2>Calculate sum of two numbers</h2>
<fieldset>
    <legend>Enter Number</legend>
    @using (Html.BeginForm("CalculateSum", "Home"))
    {
        <div>
            <label for="FirstNumber">First Number:</label>
            <input type="number" name="FirstNumber" class="form-control" value="0" />
        </div>
        <div>
            <label for="SecondNumber">Second Number:</label>
            <input type="number" name="SecondNumber" class="form-control" value="0" />
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit btn btn-primary" />
        </div>
    }
</fieldset>
<div>
    <span>Result: @ViewBag.Result</span>
</div>